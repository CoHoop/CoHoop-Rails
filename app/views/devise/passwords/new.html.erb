<div class="signinForm well clearfix">
<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="control-group">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Send new password", class: 'btn btn-large' %>
    </div>
  </div>
<% end %>

<p><%= render "devise/shared/links" %></p>
</div>