<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login-mini-form', class: 'form-inline userAuth' }) do |f| %>
  <%= f.email_field :email,       class: 'input-large', placeholder: 'Email' %>
  <%= f.password_field :password, class: 'input-medium', placeholder: 'Password' %>
  <%= f.submit "Log in", id: 'login-button', class: 'btn btn-small btn-cohoop' %>

  <%- if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <%- end -%>

<% end %>
