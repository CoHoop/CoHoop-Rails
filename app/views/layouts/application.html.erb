<%=	render 'layouts/header' %>
  <div class="container-fluid">
    <%= render 'shared/flash_messages' %>
    <div id="content" class="clearfix">
      <%= yield %>
    </div>
    <% if Rails.env.development? then %>
      <div id="debug">
        <%= debug(params) %>
        <%= debug(cookies) %>
      </div>
    <% end %>
  </div>
<%= javascript_include_tag "application" %>
</body>
