<head>
  <%= render 'layouts/meta' %>
  <title><%= get_title @title %></title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
