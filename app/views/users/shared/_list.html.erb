<ul id="users-list">
<% users.each do |user| %>
  <li>
  	<div class="image-placeholder">
    	<%= user.avatar(avatar_size) %>
	</div>
	<div class="user-infos">
	    <div class="username"><%= user.name %></div>
	    <div id="follow-button"><%= user.follow_button %></div>
	</div>
	<div class="user-tags">
		<%= user.main_tags %>
	</div>
  </li>
<% end %>
</ul>
