<ul id="users-list">
<% users.each do |user| %>
  <li>
  	<div class="image-placeholder">
    	<%= link_to user.avatar(avatar_size), profile_path(id: user.id, first: user.first_name.downcase, last:user.last_name.downcase) %>
	</div>
	<div class="user-infos">
	    <div class="username"><%= link_to user.name, profile_path(id: user.id, first: user.first_name.downcase, last:user.last_name.downcase) %></div>
	    <div id="follow-button"><%= user.follow_button %></div>
	    <%= user.main_tags %>
	</div>
  </li>
<% end %>
</ul>
